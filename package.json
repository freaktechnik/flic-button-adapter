{
  "name": "flic-button-adapter",
  "display_name": "Flic Button",
  "version": "0.1.1",
  "description": "React to Flic button presses with the Mozilla IoT gateway. Doesn't work with other adapters that use bluetooth (e.g. HomeKit). Click your button once to pair; if it doesn't blink, hold it for seven seconds to make it available.",
  "main": "adapter.js",
  "scripts": {
    "lint": "eslint .",
    "build": "./package.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrstegeman/flic-button-adapter.git"
  },
  "keywords": [
    "mozilla",
    "iot",
    "flic"
  ],
  "author": "Michael Stegeman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mrstegeman/flic-button-adapter/issues"
  },
  "homepage": "https://github.com/mrstegeman/flic-button-adapter#readme",
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^6.0.1"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "adapter.js",
    "fliclib-linux-hci/clientlib/nodejs/fliclibNodeJs.js",
    "fliclib-linux-hci/bin/armv6l/flicd",
    "fliclib-linux-hci/bin/i386/flicd",
    "fliclib-linux-hci/bin/x86_64/flicd"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "device": "hci0"
    },
    "schema": {
      "type": "object",
      "required": [
        "device"
      ],
      "title": "The flicd needs an exclusive Bluetooth adapter. Please disable bluetooth functionality of other adapters like the HomeKit adapter.",
      "properties": {
        "device": {
          "type": "string",
          "title": "Bluetooth Device Identifier"
        },
        "startDaemon": {
          "type": "boolean",
          "title": "Run bundled flicd",
          "default": true
        }
      }
    }
  }
}
