{
  "name": "flic-button-adapter",
  "display_name": "Flic Button",
  "version": "0.0.2",
  "description": "React to Flic button presses with the Mozilla IoT gateway. Doesn't work with other adapters that use bluetooth (Thing URL with Bluetooth, Homekit). Click your button once to pair; if it doesn't blink, hold it for seven seconds to make it available.",
  "main": "adapter.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "./build.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/freaktechnik/flic-button-adapter.git"
  },
  "keywords": [
    "mozilla",
    "iot",
    "flic"
  ],
  "author": "Martin Giger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/freaktechnik/flic-button-adapter/issues"
  },
  "homepage": "https://github.com/freaktechnik/flic-button-adapter#readme",
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "adapter.js",
    "fliclib-linux-hci/clientlib/nodejs/fliclibNodeJs.js",
    "fliclib-linux-hci/bin/armv6l/flicd",
    "fliclib-linux-hci/bin/i386/flicd",
    "fliclib-linux-hci/bin/x86_64/flicd"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "device": "hci0"
    },
    "schema": {
      "type": "object",
      "required": [
        "device"
      ],
      "title": "The flicd needs an exclusive Bluetooth adapter. Please disable bluetooth functionality of other adapters like the Thing URL adapter or the Homekit adapter.",
      "properties": {
        "device": {
          "type": "string",
          "title": "Bluetooth Device Identifier"
        }
      }
    }
  }
}
